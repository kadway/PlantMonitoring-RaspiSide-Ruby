
<h1><%= @datum.alias %> historic </h1> <%= link_to 'Back', data_path %>

<table>
  <thead>
    <tr>
      <th>Time</th>
      <th>Name</th>
      <th>Value</th>
      <th>Percentage</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @plant.each do |datum| %>
      <tr>
 
        <td><%= datum.timestamp %></td>
        <td><%= datum.alias %></td>
        <td><%= datum.voltage %> V </td>
        <td><%= datum.percentage %> %</td>
        <td><%= link_to 'Edit', edit_datum_path(datum) %></td>
        <td><%= link_to 'Destroy', datum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
